<% flash.each do |name, msg| %>
  <% if msg.present? %>
    <div class="header">
      <p class="logo brandon">Drylab</p>
      <%= content_tag :div, msg, class: "byline brandon" %>
    </div>
  <% end %>
<% end %>
<div class="hero">
  <div class="row">
    <div class="flex-cont">
      <div class="flex-item">
        <p class="large brandon">Drylab 3 is coming!</p>
        <div class="small-wrap" style="max-width: 30em;">
          <p class="small brandon">Not for the dreamers, but for the creators.<p>
          <p class="small brandon">Decades of award-winning experience in the Scandinavian wilderness, distilled into completely re-designed software.<br/>Built especially for independent film-makers with limited resources, yet big ambitions.</p>
          <p class="small brandon">Set it up before production starts, and watch the dailies sync with almost no effort.</p>
          <p class="small brandon">No more limited overview or lost takes.<br/>Just better creation. Anywhere.</p>
        </div>
      </div>
      <div class="flex-item">
        <div class="ipad-mock">
          <iframe src="https://player.vimeo.com/video/252508823?autoplay=1&loop=1&loop=1&title=0&byline=0&portrait=0&background=1&muted=1" width="360" height="350" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

          <!-- <%=video_tag(['landing_page_video_frameless.mp4', 'landing_page_video_frameless.ogg'], autoplay: true, loop: true, muted: true, controls: true, controlsList: "nofullscreen, nodownload", type: 'video/mp4', class: "video")%> -->
        </div>
      </div>
    </div>
  </div>
</div>

<div class="form-wrap clearfix <%= "ended" if Rails.application.config.ended %>">
  <% if Rails.application.config.ended %>
    <%= render "users/campaign_ended" %>
  <% else %>
    <%= render "users/campaign_ongoing" %>
  <% end %>
</div>
